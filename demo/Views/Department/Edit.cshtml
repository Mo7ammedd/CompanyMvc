@model Department

@{
    ViewBag.Title = "title";
}

<h2>Edit Department</h2>
<br>
<br>
<form asp-action="Edit">
    <div asp-validation-summary="All"> </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control"/>
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input asp-for="DateOfCreation" class="form-control"/>
    </div>

    <input type="submit" value="Save" class="btn btn-primary"/>
    <a asp-action="Index" class="btn btn-light">Back to list</a>

</form>